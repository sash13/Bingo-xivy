# -*- coding: utf-8 -*-
#:import C kivy.utils.get_color_from_hex

<MainLayout@GridLayout>:
    cols: 1
    padding: 10
    spacing: 10
    row_default_height:
        (0.1 * (self.width - self.spacing[0]) -
        self.padding[0])
    row_force_default: True

<GameLayout@GridLayout>:
    cols: 5
    spacing: 10
    row_default_height:
        (0.2 * (self.width - self.spacing[0]) -
        self.padding[0])
    row_force_default: True

<GameButton@Button>:
    text: '[size=20]N[/size][/font]'
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    background_color: C('#2ecc71')
    font_size: 14
    halign: 'center'
    markup: True
    on_press: app.press(self)

<ResetButton@Button>:
    text: 'Reset'
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    background_color: C('#16a085')
    font_size: 14
    size: (100, 50)
    halign: 'center'
    markup: True
    on_press: app.reset()

